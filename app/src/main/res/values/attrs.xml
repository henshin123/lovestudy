<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ActionMenu Property -->
    <declare-styleable name="ActionMenu">
        <attr name="circleRadius" format="dimension" />
        <attr name="dimens" format="dimension" />
        <attr name="animationDuration" format="integer" />
        <attr name="buttonNormalColor" format="color" />
        <attr name="buttonPressColor" format="color" />
        <attr name="actionMenuIcon" format="reference" />
        <attr name="actionMenuOnIcon" format="reference" />
        <attr name="expandDirect"/>
    </declare-styleable>

    <!-- direct enum -->
    <attr name="expandDirect">
        <enum name="expandDirectTop" value="0"/>
        <enum name="expandDirectDown" value="1"/>
        <enum name="expandDirectLeft" value="2"/>
        <enum name="expandDirectRight" value="3"/>
    </attr>
    <declare-styleable name="RadarChartView">
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="axisColor" format="color" />
        <attr name="parts" format="integer" />
        <attr name="axisMax" format="float" />
        <attr name="axisTick" format="float" />
        <attr name="axisWidth" format="dimension" />
        <attr name="chartColor" format="color" />
        <attr name="chartWidth" format="dimension" />
        <attr name="chartStyle" format="enum">
            <enum name="fill" value="0" />
            <enum name="stroke" value="1" />
            <enum name="fill_and_stroke" value="2" />
        </attr>
        <attr name="textSize" format="dimension" />
        <attr name="circlesOnly" format="boolean" />
        <attr name="autoSize" format="boolean" />
        <attr name="smoothGradient" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TagCloudView">
        <attr name="autoScrollMode">
            <enum name="disable" value="0"/>
            <enum name="decelerate" value="1"/>
            <enum name="uniform" value="2"/>
        </attr>

        <attr name="radiusPercent" format="float"/>
        <attr name="scrollSpeed" format="float"/>
        <attr name="lightColor" format="color"/>
        <attr name="darkColor" format="color"/>
    </declare-styleable>


</resources>